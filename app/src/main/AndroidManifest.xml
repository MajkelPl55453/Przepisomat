<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.przepisomat.przepisomat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.CategoriesActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RecipesActivity" />
        <activity android:name=".activity.RecipeDetailsActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.FavouritesActivity"></activity>
    </application>

</manifest>